{
	"info": {
		"_postman_id": "primetrade-api-collection",
		"name": "Primetrade API",
		"description": "REST API with Authentication & Role-Based Access for Primetrade Backend Developer Assignment",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000/api/v1"
		},
		{
			"key": "token",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Auth",
			"description": "Authentication endpoints for user registration and login",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						},
						"description": "Register a new user with username, email, and password. Returns JWT token on success."
					},
					"response": [
						{
							"name": "Success",
							"status": "Created",
							"code": 201,
							"body": "{\n    \"success\": true,\n    \"message\": \"User registered successfully\",\n    \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n    \"user\": {\n        \"id\": \"...\",\n        \"username\": \"testuser\",\n        \"email\": \"test@example.com\",\n        \"role\": \"user\"\n    }\n}"
						}
					]
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Login with email and password. Returns JWT token on success."
					},
					"response": [
						{
							"name": "Success",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"success\": true,\n    \"message\": \"Login successful\",\n    \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n    \"user\": {\n        \"id\": \"...\",\n        \"username\": \"testuser\",\n        \"email\": \"test@example.com\",\n        \"role\": \"user\"\n    }\n}"
						}
					]
				},
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/profile",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "profile"]
						},
						"description": "Get authenticated user's profile. Requires JWT token."
					},
					"response": [
						{
							"name": "Success",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"success\": true,\n    \"user\": {\n        \"id\": \"...\",\n        \"username\": \"testuser\",\n        \"email\": \"test@example.com\",\n        \"role\": \"user\",\n        \"createdAt\": \"2026-01-22T00:00:00.000Z\"\n    }\n}"
						}
					]
				}
			]
		},
		{
			"name": "Tasks",
			"description": "CRUD operations for tasks (requires authentication)",
			"item": [
				{
					"name": "Create Task",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Complete project documentation\",\n    \"description\": \"Write comprehensive README and API docs\",\n    \"status\": \"pending\",\n    \"priority\": \"high\",\n    \"dueDate\": \"2026-01-25\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/tasks",
							"host": ["{{baseUrl}}"],
							"path": ["tasks"]
						},
						"description": "Create a new task. Requires authentication."
					},
					"response": [
						{
							"name": "Success",
							"status": "Created",
							"code": 201,
							"body": "{\n    \"success\": true,\n    \"message\": \"Task created successfully\",\n    \"task\": {\n        \"id\": \"...\",\n        \"title\": \"Complete project documentation\",\n        \"description\": \"Write comprehensive README and API docs\",\n        \"status\": \"pending\",\n        \"priority\": \"high\",\n        \"dueDate\": \"2026-01-25T00:00:00.000Z\",\n        \"userId\": \"...\",\n        \"createdAt\": \"...\",\n        \"updatedAt\": \"...\"\n    }\n}"
						}
					]
				},
				{
					"name": "Get All Tasks",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/tasks?status=&priority=&sortBy=createdAt&order=desc",
							"host": ["{{baseUrl}}"],
							"path": ["tasks"],
							"query": [
								{
									"key": "status",
									"value": "",
									"description": "Filter by status: pending, in-progress, completed"
								},
								{
									"key": "priority",
									"value": "",
									"description": "Filter by priority: low, medium, high"
								},
								{
									"key": "sortBy",
									"value": "createdAt",
									"description": "Sort by: title, status, priority, dueDate, createdAt"
								},
								{
									"key": "order",
									"value": "desc",
									"description": "Sort order: asc, desc"
								}
							]
						},
						"description": "Get all tasks for the authenticated user. Supports filtering and sorting."
					},
					"response": [
						{
							"name": "Success",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"success\": true,\n    \"count\": 2,\n    \"tasks\": [\n        {\n            \"id\": \"...\",\n            \"title\": \"Task 1\",\n            \"description\": \"Description\",\n            \"status\": \"pending\",\n            \"priority\": \"high\",\n            \"dueDate\": null,\n            \"createdAt\": \"...\",\n            \"updatedAt\": \"...\"\n        }\n    ]\n}"
						}
					]
				},
				{
					"name": "Get Task by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "task_id_here",
									"description": "Task ID"
								}
							]
						},
						"description": "Get a specific task by ID. Only returns tasks owned by the authenticated user."
					},
					"response": []
				},
				{
					"name": "Update Task",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated task title\",\n    \"status\": \"in-progress\",\n    \"priority\": \"medium\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "task_id_here",
									"description": "Task ID"
								}
							]
						},
						"description": "Update an existing task. Only the task owner can update."
					},
					"response": []
				},
				{
					"name": "Delete Task",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/tasks/:id",
							"host": ["{{baseUrl}}"],
							"path": ["tasks", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "task_id_here",
									"description": "Task ID"
								}
							]
						},
						"description": "Delete a task. Only the task owner can delete."
					},
					"response": []
				}
			]
		},
		{
			"name": "Admin",
			"description": "Admin-only endpoints (requires admin role)",
			"item": [
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/users",
							"host": ["{{baseUrl}}"],
							"path": ["admin", "users"]
						},
						"description": "Get all users in the system. Requires admin role."
					},
					"response": [
						{
							"name": "Success",
							"status": "OK",
							"code": 200,
							"body": "{\n    \"success\": true,\n    \"count\": 5,\n    \"users\": [\n        {\n            \"id\": \"...\",\n            \"username\": \"admin\",\n            \"email\": \"admin@example.com\",\n            \"password\": \"$2a$10$...\",\n            \"createdAt\": \"...\",\n            \"updatedAt\": \"...\"\n        }\n    ]\n}"
						},
						{
							"name": "Forbidden",
							"status": "Forbidden",
							"code": 403,
							"body": "{\n    \"success\": false,\n    \"message\": \"Access denied. Admin privileges required.\"\n}"
						}
					]
				},
				{
					"name": "Get All Tasks (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/tasks/admin/all",
							"host": ["{{baseUrl}}"],
							"path": ["tasks", "admin", "all"]
						},
						"description": "Get all tasks from all users. Requires admin role."
					},
					"response": []
				}
			]
		}
	]
}
